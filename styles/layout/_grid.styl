// -----------------------------------------------------------------------------
// GRID LAYOUT
// -----------------------------------------------------------------------------

// CORE
//------

.l-line, .l-line-gtr, .l-unit-last
  overflow hidden
  *overflow visible
  *zoom 1

.l-unit
  float left

.l-unit-right
  float right

.l-size1of1
  float none

.l-size1of2
  width 50%

.l-size1of3
  width 33.33333%

.l-size2of3
  width 66.66666%

.l-size1of4
  width 25%

.l-size3of4
  width 75%

.l-size1of5
  width 20%

.l-size2of5
  width 40%

.l-size3of5
  width 60%

.l-size4of5
  width 80%

.l-unit-last
  float none
  width auto


// GUTTER SPECIFIC
//-----------------

.l-line-gtr
  >.l-unit,
  >.l-unit-last
    padding 0 ($upft-gridGutterWidth / 2)


// RIGHT TO LEFT
//---------------

.l-rtl
  direction rtl

.l-rtl .l-unit
  float right
